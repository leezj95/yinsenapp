/* pages/goods/detail/index.wxss */

page {
  height: 100%;
  box-sizing: border-box;
  background-color: #f2f2f2;
  padding-bottom: calc(env(safe-area-inset-bottom));
  overflow-y: auto;
}

.t-swiper-host {
  border-radius: 0 !important;
}

.goods-head {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.goods-head__name {
  padding: 24rpx;
  background-color: #ffffff;
}

.goods-info {
  background-color: #ffffff;
}

.goods-info__1 {
  padding: 30rpx;
}

.goods-info__1 image {
  width: 100%;
}

.goods-info__2 {
  padding: 30rpx;
}

.table {
  border: 1rpx solid #ddd;
  /* font-size: 12px; */
  border-radius: 10rpx;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: center;
  border-top: 1rpx solid #ddd;
}

.td {
  width: 60%;
  padding: 20rpx;
  word-wrap: break-word;
  vertical-align: top;
}

.tr:first-child {
  border: none;
}

.tr .td:first-child {
  width: 40%;
  border-right: 1rpx solid #ddd;
  color: darkgray;
  text-align: left;
}